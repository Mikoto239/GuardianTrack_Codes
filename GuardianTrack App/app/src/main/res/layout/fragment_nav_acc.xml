<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Profile Header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@drawable/black"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/accImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/face" />
    </LinearLayout>

    <!-- Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/accName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="text"
            android:enabled="false"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_vertical|start"
            android:background="@drawable/rounded_background"
            android:paddingStart="16dp"/>
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/accEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:inputType="text"
        android:enabled="false"
            android:minHeight="48dp"
            android:gravity="center_vertical|start"
            android:background="@drawable/rounded_background"
            android:paddingStart="16dp"/>
    </LinearLayout>

    <!-- Additional Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <com.example.guardiantrack.CustomEditTextID
            android:id="@+id/accUid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ID"
            android:inputType="text"
            android:maxLength="17"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:textSize="14sp"
            android:gravity="center_vertical|start"
            android:background="@drawable/rounded_background"
            android:paddingStart="16dp"
            android:textColorHint="@color/black" />

<!--        <com.example.guardiantrack.CustomEditTextNum-->
<!--            android:id="@+id/accPhoneNumber"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:hint="Enter Phone Number"-->
<!--            android:textStyle="bold"-->
<!--            android:inputType="text"-->
<!--            android:maxLength="11"-->
<!--            android:textColor="@color/black"-->
<!--            android:textColorHint="@color/black" />-->

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

<!--            <Button-->
<!--                android:id="@+id/updateButton"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:text="Update Number"-->
<!--                android:textColor="@color/black"-->
<!--                android:visibility="gone" />-->

            <Button
                android:id="@+id/Regbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#66ff66"
                android:text="Register"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
